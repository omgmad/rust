// contracts/cw20_basic/src/lib.rs
use cosmwasm_std::{entry_point, to_binary, Binary, DepsMut, Env, MessageInfo, Response, StdResult};
use cw20::{Cw20ExecuteMsg, Cw20ReceiveMsg, Cw20QueryMsg, TokenInfoResponse};
use cw20_base::contract::{instantiate as cw20_instantiate, query as cw20_query, execute as cw20_execute};
use cw20_base::msg::{InstantiateMsg, MinterResponse};

#[entry_point]
pub fn instantiate(
    deps: DepsMut,
    env: Env,
    info: MessageInfo,
    msg: InstantiateMsg,
) -> StdResult<Response> {
    cw20_instantiate(deps, env, info, msg)
}

#[entry_point]
pub fn execute(
    deps: DepsMut,
    env: Env,
    info: MessageInfo,
    msg: Cw20ExecuteMsg,
) -> StdResult<Response> {
    cw20_execute(deps, env, info, msg)
}

#[entry_point]
pub fn query(deps: cosmwasm_std::Deps, env: Env, msg: Cw20QueryMsg) -> StdResult<Binary> {
    cw20_query(deps, env, msg)
}
